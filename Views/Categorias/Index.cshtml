@model IEnumerable<Categorias>

@{
    ViewData["Title"] = "Categorías";
}

<h1>Categorías</h1>

<h5>Las categorías nos indícan en que gastamos nuestro capital (salud, comida, ocio, etc) y también, de donde provienen nuestros ingresos.</h5>

<a asp-action="Crear" class="btn btn bg-success">Crear nueva</a>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
            <th>Tipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>
                    <a asp-action="Editar" asp-route-id="@categoria.Id" class="btn btn-primary">
                        <i class="bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Borrar" asp-route-id="@categoria.Id" class="btn btn-secondary">
                        <i class="bi-trash-fill"></i>
                    </a>
                </td>

                <td>
                    @categoria.Nombre
                </td>

                <td>
                    @categoria.TipoOperacionId.ToString()
                </td>

            </tr>
        }
    </tbody>
</table>