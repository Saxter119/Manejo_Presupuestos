@model Categorias

@{
    ViewData["Title"] = "Editar categoría";
}

<h1>Editar cuenta: @Model.Nombre</h1>

<h5>Recuerda que las categorías nos indícan en que gastamos nuestro capital (salud, comida, ocio, etc) y también, de donde provienen nuestros ingresos.</h5>

<form action="Editar" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">

        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">

        <label asp-for="TipoOperacionId" class="form-label"></label>
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()" class="form-select"></select>
        <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>


</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}